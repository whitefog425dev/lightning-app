{
  "name": "Lightning",
  "version": "0.1.0",
  "private": true,
  "author": "Kevin Johnson <kevinejohn@gmail.com>",
  "homepage": "./",
  "description": "Lightning Desktop Wallet",
  "dependencies": {
    "bitcore-mnemonic": "^1.5.0",
    "electron-is-dev": "0.3.0",
    "electron-log": "2.2.12",
    "grpc": "1.7.3",
    "mobx": "3.4.1",
    "mobx-react": "4.3.5",
    "ps-node": "0.1.6",
    "qr-image": "3.2.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-native-web": "0.1.16",
    "react-scripts": "1.0.17"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "npm run -s test:unit",
    "test:unit": "mocha --opts test/mocha.opts ./test/unit/",
    "test:react": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "build --em.main=build/electron.js",
    "electron-only": "electron .",
    "preelectron-pack": "yarn build",
    "prettier": "prettier --write --single-quote --trailing-comma es5 \"src/**/*.js\" public/electron.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "main": "public/electron.js",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "concurrently": "3.5.1",
    "electron": "1.7.9",
    "electron-builder": "19.49.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-prettier": "2.3.1",
    "mocha": "^5.0.0",
    "prettier": "1.9.2",
    "prop-types": "15.6.0",
    "sinon": "^4.1.6",
    "unexpected": "^10.36.2",
    "unexpected-sinon": "^10.8.2",
    "wait-on": "2.0.2"
  },
  "build": {
    "appId": "com.example.lightning-desktop",
    "mac": {
      "category": "Network"
    },
    "linux": {
      "category": "Network"
    },
    "win": {},
    "productName": "Lightning",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "assets/bin/**/*",
      "assets/rpc.proto",
      "src/config.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": null
  }
}
